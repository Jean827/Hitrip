{
  "dashboard": {
    "id": null,
    "title": "海南文旅系统监控",
    "tags": ["hainan-tourism", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "系统资源使用率",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU使用率"
          },
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "内存使用率"
          }
        ],
        "yAxes": [
          {
            "label": "使用率 (%)",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 2,
        "title": "API响应时间",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95%响应时间"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50%响应时间"
          }
        ],
        "yAxes": [
          {
            "label": "响应时间 (秒)",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "API请求量",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "请求量/秒"
          }
        ],
        "yAxes": [
          {
            "label": "请求数/秒",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "数据库连接数",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "连接数"
          }
        ],
        "yAxes": [
          {
            "label": "连接数",
            "min": 0
          }
        ]
      },
      {
        "id": 5,
        "title": "Redis缓存命中率",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total) * 100",
            "legendFormat": "命中率"
          }
        ],
        "yAxes": [
          {
            "label": "命中率 (%)",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 6,
        "title": "错误率",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "5xx错误率"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "4xx错误率"
          }
        ],
        "yAxes": [
          {
            "label": "错误率 (%)",
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "活跃连接数",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "http_active_connections",
            "legendFormat": "活跃连接"
          }
        ]
      },
      {
        "id": 8,
        "title": "数据库连接数",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 24
        },
        "targets": [
          {
            "expr": "database_connections",
            "legendFormat": "数据库连接"
          }
        ]
      },
      {
        "id": 9,
        "title": "Redis连接数",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 24
        },
        "targets": [
          {
            "expr": "redis_connections",
            "legendFormat": "Redis连接"
          }
        ]
      },
      {
        "id": 10,
        "title": "用户注册数",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 24
        },
        "targets": [
          {
            "expr": "user_registrations_total",
            "legendFormat": "注册用户"
          }
        ]
      },
      {
        "id": 11,
        "title": "订单创建数",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 28
        },
        "targets": [
          {
            "expr": "orders_created_total",
            "legendFormat": "订单数"
          }
        ]
      },
      {
        "id": 12,
        "title": "活跃用户数",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 28
        },
        "targets": [
          {
            "expr": "active_users",
            "legendFormat": "活跃用户"
          }
        ]
      },
      {
        "id": 13,
        "title": "总收入",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 28
        },
        "targets": [
          {
            "expr": "revenue_total",
            "legendFormat": "总收入"
          }
        ]
      },
      {
        "id": 14,
        "title": "磁盘使用率",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        },
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes - node_filesystem_avail_bytes) / node_filesystem_size_bytes * 100",
            "legendFormat": "磁盘使用率"
          }
        ],
        "yAxes": [
          {
            "label": "使用率 (%)",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 15,
        "title": "网络流量",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        },
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[5m])",
            "legendFormat": "接收流量"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total[5m])",
            "legendFormat": "发送流量"
          }
        ],
        "yAxes": [
          {
            "label": "字节/秒",
            "min": 0
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 16,
    "version": 1,
    "links": [],
    "gnetId": null,
    "uid": "hainan-tourism-monitoring"
  }
} 